<!-- Game Manifest -->
<game>
	<name>minecraft_spigot</name>

	<actions>
		<!-- Make Game Repository -->
		<repository>
			<!-- Download required files -->
			<get>http://ci.md-5.net/view/Spigot/job/Spigot/lastSuccessfulBuild/artifact/Spigot-Server/target/spigot.jar</get>
			<!-- Additionnal Actions -->
			<!-- Nothing to do! -->
		</repository>

		<!-- Install Game Server From Game Repository -->
		<installgame>
			<!-- Copy Game Server Files -->
			<rsync_c></rsync_c>
			<chmodx>spigot.jar</chmodx>
		</installgame>

		<!-- Update Game Server From Game Repository -->
		<updategame>
			<!-- Update Game Server Files -->
			<rsync_u>server.properties</rsync_u>
			<chmodx>spigot.jar</chmodx>
		</updategame>
	</actions>
</game>
